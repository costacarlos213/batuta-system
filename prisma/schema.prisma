// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model Order {
  id           String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  cod          String
  customerName String
  description  String
  total        Decimal
  delivery     String
  payment      String
  address      String
  phone        String
  comments     String?
  date         String
}

model User {
  id       String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  value    String
}
